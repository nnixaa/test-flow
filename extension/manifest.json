{
  "manifest_version": 2,
  "name": "Test Flow",
  "version": "1.0",
  "description": "Test Angular apps with ease",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_icon": "favicon.ico",
    "default_popup": "content/open-dialog.html"
  },
  "web_accessible_resources": [
    "index.html"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content/run.js"]
    }
  ]
}
